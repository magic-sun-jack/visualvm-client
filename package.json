{
  "name": "visualvm-client",
  "version": "1.0.0",
  "description": "VisualVM数据监控前端客户端",
  "type": "module",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite --port 3300",
    "dev-local": "vite --port 3300 --mode dev-local",
    "deploy": "pnpm run build && gh-pages -d dist",
    "deploy:github": "pnpm run build && gh-pages -d dist -b gh-pages",
    "build": "vite build",
    "build:check": "vue-tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.cts,.mts --fix --ignore-path .gitignore",
    "type-check": "vue-tsc --noEmit",
    "electron": "electron .",
    "electron:dev": "concurrently \"pnpm run dev\" \"wait-on tcp:3300 && electron .\"",
    "electron:dev-local": "concurrently \"pnpm run dev-local\" \"wait-on tcp:3300 && electron .\"",
    "electron:build": "pnpm run build && electron-builder",
    "electron:build:win": "pnpm run build && electron-builder --win",
    "electron:build:mac": "pnpm run build && electron-builder --mac",
    "electron:build:linux": "pnpm run build && electron-builder --linux",
    "pack:win": "electron-builder --win --publish=never",
    "dist:win": "pnpm run build && pnpm run pack:win",
    "installer:win": "pnpm run build && electron-builder --win --publish=never --config.nsis.oneClick=false --config.nsis.allowToChangeInstallationDirectory=true"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.12",
    "@vueuse/core": "^10.7.0",
    "axios": "^1.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.10",
    "echarts": "^5.4.3",
    "lodash-es": "^4.17.21",
    "lucide-vue-next": "^0.542.0",
    "pinia": "^2.1.7",
    "radix-vue": "^1.4.0",
    "reka-ui": "^2.5.0",
    "tailwind-merge": "^3.3.1",
    "vue": "^3.4.0",
    "vue-echarts": "^6.6.1",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.10.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8.55.0",
    "eslint-plugin-vue": "^9.19.0",
    "gh-pages": "^6.3.0",
    "postcss": "^8.4.32",
    "shadcn-vue": "^2.2.0",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "~5.3.0",
    "vite": "^5.0.0",
    "vue-tsc": "^1.8.25",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.visualvm.client",
    "productName": "VisualVM Client",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "VisualVM Client"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "packageManager": "pnpm@10.11.1+sha512.e519b9f7639869dc8d5c3c5dfef73b3f091094b0a006d7317353c72b124e80e1afd429732e28705ad6bfa1ee879c1fce46c128ccebd3192101f43dd67c667912"
}
